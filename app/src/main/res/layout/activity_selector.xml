<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/splash_screen"
    tools:context=".activities.authPart.RegisterActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">

            <TextView
                android:id="@+id/display_text_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How would you like to sign in ?"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lavender"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pet_owner_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:backgroundTint="@color/lavender"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:padding="8dp"
                android:hint="As a pet Owner"
                android:textColorHint="@color/white"
                android:drawableStart="@drawable/baseline_pets_24_white"
                android:drawablePadding="0dp"
                android:textColor="@android:color/white"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pet_sitter"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:backgroundTint="@color/lavender"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:padding="8dp"
                android:hint="As a pet Sitter"
                android:textColorHint="@color/white"
                android:drawableStart="@drawable/baseline_nordic_walking_24"
                android:drawablePadding="0dp"
                android:textColor="@android:color/white"
                />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>