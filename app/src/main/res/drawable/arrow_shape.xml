<?xml version="1.0" encoding="utf-8"?>
<!-- arrow_shape.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="30dp"
        android:height="30dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#FF0000" /> <!-- Red color -->
            </shape>
        </rotate>
    </item>

</layer-list>